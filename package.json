{
  "name": "open-with-me",
  "version": "0.2.0",
  "description": "Obtain (and open) desktop applications that can open a given file",
  "main": "src/index.js",
  "types": "./dist/src/index.d.cts",
  "type": "module",
  "exports": {
    "import": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.js"
    },
    "require": {
      "types": "./dist/src/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "prepublishOnly": "npm run rollup",
    "tsc": "tsc",
    "attw": "attw --pack",
    "eslint": "eslint --ext=js,md,html .",
    "lint": "npm run eslint --",
    "rollup": "rollup -c && tsc -p tsconfig-prod.json",
    "test-index": "node test/index.js && node test/getOpenWithApps.js",
    "test-native": "node test/test-native.js",
    "tests": "npm run test-native && npm run test-index",
    "test": "c8 npm run tests",
    "install": "node scripts/install-native.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brettz9/open-with-me.git"
  },
  "keywords": [
    "open-with",
    "file-manager"
  ],
  "author": "Brett Zamir",
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brettz9/open-with-me/issues"
  },
  "homepage": "https://github.com/brettz9/open-with-me#readme",
  "engines": {
    "node": "^20.11.0 || >= 22.16.0"
  },
  "dependencies": {
    "@fiahfy/icns": "0.0.7",
    "datauri": "^4.1.0",
    "lsregister": "1.0.0",
    "mac-defaults": "^2.0.0",
    "mdls": "1.2.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@types/node": "^24.10.1",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "eslint-config-ash-nazg": "^39.8.0",
    "rollup": "^4.53.3",
    "typescript": "^5.9.3"
  }
}
