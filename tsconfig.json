{
  "compilerOptions": {
    "lib": ["es2024"],
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "noImplicitAny": true,
    "strict": true,
    "target": "es2024",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["*.js", "src/**/*.js", "test/test-native.js", "test/index.js"],
  "exclude": ["node_modules"]
}
